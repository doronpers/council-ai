{
    "name": "Council AI",
    "image": "mcr.microsoft.com/devcontainers/python:3.11",
    "features": {
        "ghcr.io/devcontainers/features/node:1": {},
        "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {}
    },
    "postCreateCommand": "python -m pip install -e .[all,dev] && npm install",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "charliermarsh.ruff",
                "esbenp.prettier-vscode",
                "tamasfe.even-better-toml"
            ]
        }
    },
    "forwardPorts": [
        8000,
        5173
    ],
    "portsAttributes": {
        "8000": {
            "label": "Council AI API",
            "onAutoForward": "notify"
        },
        "5173": {
            "label": "Council AI Web UI",
            "onAutoForward": "notify"
        }
    }
}